<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:id="@+id/title_tv" android:background="@android:color/white"
              android:layout_centerHorizontal="true" android:padding="10dp" android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:textStyle="bold"
              android:textSize="10sp"
              android:textColor="@android:color/black"
              android:text="@string/title"/>

    <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="请输入授权码"
            android:padding="5dp"
            android:inputType="number"
            android:textSize="12dp"
            android:singleLine="true"
            android:lines="1"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="#AAAAAA"
            android:background="@null"/>
    <Button android:id="@+id/btn" android:textSize="10sp" android:textColor="@android:color/black"
            android:text="@string/str_submit" android:layout_margin="10dp"
            android:background="@drawable/circle_yellow" android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
</LinearLayout>